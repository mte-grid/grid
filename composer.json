{
  "name": "nnx/data-grid",
  "description": "NNX grid module",
  "type": "library",
  "keywords": [
    "zf2"
  ],
  "authors": [
    {
      "name": "Roman Malashin",
      "email": "malashinr@mte-telecom.ru"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/nnx-company/grid.git"
    }
  ],
  "require": {
    "php": ">=5.5",
    "zendframework/zendframework": "2.4.*",
    "doctrine/doctrine-orm-module":  "0.*"
  },
  "require-dev":{
    "fabpot/php-cs-fixer": "1.9.1",
    "phpunit/phpunit": "4.7.7",
    "phpunit/phpcov": "2.0.1"
  },
  "autoload": {
    "psr-4": {
      "NNX\\DataGrid\\": "src/"
    },
    "classmap": [
      "./Module.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "php vendor/bin/templatemap_generator.php"
    ],
    "post-update-cmd": [
      "php vendor/bin/templatemap_generator.php"
    ]
  }
}